{
  "manifest_version": 3,
  "name": "PhishJail",
  "description": "Identify and prevent enterprise password leaks",
  "version": "1.0.0",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "alarms",
    "scripting",
    "notifications",
    "tabCapture"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "storage": {
    "managed_schema": "schema.json"
  },
  "content_security_policy": {
    "extension_pages":  "default-src 'self'; script-src 'self' 'wasm-unsafe-eval';  style-src 'self'; script-src-elem 'self' 'unsafe-inline';"
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "web_accessible_resources": [],
  "content_scripts": [
    {
      "all_frames": true,
      "js": ["js/content.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_start"
    }
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "optional_permissions": []
}
