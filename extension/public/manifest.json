{
  "manifest_version": 3,
  "name": "PhishJail",
  "description": "Identify and prevent enterprise password leaks",
  "version": "1.0.1",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "storage", "background", "activeTab", "tabs", "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png",
    "default_title": "PhishCatch"
  },
  "storage": {
    "managed_schema": "schema.json"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src https://localhost:* https://*"
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module",
    "run_at": "document_idle"
  },
  "web_accessible_resources": [],
  "content_scripts": [
    {
      "matches": ["<all_urls>", "https://*/*", "http://*/*"],
      "all_frames": true,
      "run_at": "document_idle",
      "js": ["js/content.js", "js/vendor.js"]
    }
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "optional_permissions": []
}
