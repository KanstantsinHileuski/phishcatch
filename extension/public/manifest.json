{
  "manifest_version": 3,
  "name": "PhishJail",
  "description": "Identify and prevent enterprise password leaks",
  "version": "1.0",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "alarms",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PhishJail",
    "default_icon": "icon.png"
  },
  "storage": {
    "managed_schema": "schema.json"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; script-src-elem 'self'"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "web_accessible_resources": [],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "all_frames": true,
      "run_at": "document_idle",
      "js": ["js/content.js", "js/vendor.js", "js/background.js"]
    }
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "optional_permissions": []
}
